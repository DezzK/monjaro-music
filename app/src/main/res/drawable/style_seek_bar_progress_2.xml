<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

	<item
		android:id="@android:id/background"
		android:gravity="fill_vertical|fill_horizontal"
		>

		<shape android:shape="rectangle" >
			<solid android:color="@color/seekBackground" />
			<corners android:radius="@dimen/cornerRadiusMedium" />
			<stroke
				android:color="@color/mainSettingsBorder"
				android:width="1dp"
				/>
		</shape>

	</item>

	<item
		android:id="@android:id/progress"
		android:gravity="fill_vertical|fill_horizontal"
		>

		<clip>
			<shape android:shape="rectangle" >
				<solid android:color="@color/seekProgress" />
				<corners android:radius="@dimen/cornerRadiusMedium" />
				<stroke
					android:color="@color/mainSettingsBorder"
					android:width="1dp"
					/>
			</shape>
		</clip>

	</item>

</layer-list>