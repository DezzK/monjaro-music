<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/background_app"
	>

	<!-- Explorer -->
	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/recyclerViewExplorer"
		style="@style/scrollbarStyle"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginBottom="100dp"
		android:clipToPadding="false"
		android:paddingTop="90dp"
		android:scrollbars="vertical"
		app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
		tools:listitem="@layout/explorer_item"
		/>

	<!-- Volume control -->
	<com.github.dezzk.monjaro_music.core.ExtendedLinearLayout
		android:id="@+id/breadcrumbBarContainer"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginBottom="140dp"
        android:layout_marginTop="120dp"
        android:layout_marginRight="@dimen/spacingLarge"
        android:alpha="0.8"
		android:elevation="@dimen/elevationSmall"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		app:cornerRadius="@dimen/cornerRadiusLarge"
		app:fillColor="@color/breadcrumbBackground"
		app:strokeColor="@color/breadcrumbBorder"
		app:strokeWidth="1dp"
        >

        <abak.tr.com.boxedverticalseekbar.VolumeControl
            android:id="@+id/volumeControl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
			android:layout_margin="1dp"
            app:backgroundColor="@color/seekBackground"
            app:progressColor="@color/seekProgress"
			app:imageTintColor="@color/seekPrimary"
            app:textColor="@color/color_text"
			app:libCornerRadius="25"
            app:imageEnabled="true"
            app:defaultImage="@drawable/ic_volume_down_black_48dp"
            app:maxImage="@drawable/ic_volume_up_black_48dp"
            app:minImage="@drawable/ic_volume_off_black_48dp"
            app:textEnabled="false"
            app:max="100"
            app:step="1"
            app:textBottomPadding="20"
            app:textSize="12sp"
            app:touchDisabled="false"
            />

	</com.github.dezzk.monjaro_music.core.ExtendedLinearLayout>


	<!-- Breadcrumb bar -->
	<include
		android:id="@+id/layoutBreadcrumbs"
		layout="@layout/app_bar"
		/>

	<!-- Controls -->
	<include
		android:id="@+id/layoutControls2"
		layout="@layout/media_controls_2"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_gravity="bottom"
		/>

	<!-- Settings -->
	<include
		android:id="@+id/layoutSettings"
		layout="@layout/settings_sheet"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_gravity="bottom"
		tools:visibility="gone"
		/>

	<!-- Permission denied layout -->
	<include
		android:id="@+id/layoutPermission"
		layout="@layout/permission_request"
		android:visibility="visible"
		tools:visibility="gone"
		/>


	<!-- dynamic colors!!
	<mohsen.muhammad.minimalist.core.ExtendedImageView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:src="@color/alwaysWhite"
		android:clickable="false"
		app:tint="#559C33BB"
		/>
	-->

</FrameLayout>
